{
  "name":"api",

  "releaser": {
    "plugin_name": "consul",
    "config": {
      "consul_service": "api"
    }
  },
  
  "runtime": {
    "plugin_name": "kubernetes",
    "config": {
      "deployment": "api-deployment",
      "namespace": "default"
    }
  },

  "strategy": {
    "plugin_name": "canary",
    "config": {
      "interval": "30s",
      "initial_traffic": 10,
      "traffic_step": 20,
      "max_traffic": 100,
      "error_threshold": 5
    }
  },
  
  "monitor": {
    "plugin_name": "prometheus",
    "config": {
      "address": "http://localhost:9090",
      "queries": [
        {
          "name": "request-success",
          "preset": "kubernetes-envoy-request-success",
          "min":99
        },
        {
          "name": "request-duration",
          "preset": "kubernetes-envoy-request-duration",
          "min":20,
          "max": 200
        }
      ]
    }
  }
}